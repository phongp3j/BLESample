<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed_color" />
            <corners android:radius="24dp" />
            <stroke
                android:width="3dp"
                android:color="@color/button_border_color"/>
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp"/>
            <shadowColor android:color="@color/button_shadow_color"/>
        </shape>
    </item>

    <!-- Default state (not pressed) -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_normal_color" />
            <corners android:radius="24dp" />
            <stroke
                android:width="3dp"
                android:color="@color/button_border_color"/>
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>
</selector>
